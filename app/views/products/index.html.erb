<p id="notice"><%= notice %></p>

<div class="container top-page">
  <h1>Listing Courses</h1>
  <hr>

  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-6 col-md-4 col-lg-4">
          <%= image_tag(product.image_url, class: "img-responsive size") %>
          <h1><%= product.name %></h1>
          <p><%= product.description %></p>
          <hr>
           <p><%= product.colour %></p>
          <strong>$<%= product.price %></strong>
          <p><%= link_to 'Show', product %></p>
          <p><%= link_to 'Edit', edit_product_path(product) %></p>
          <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div><!-- /col -->
      <% end %> 
    </div><!-- /row--> 
  </div>

  <%= link_to 'New Course', new_product_path %>
  <hr>
</div>

